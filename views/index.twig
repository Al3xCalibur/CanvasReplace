{% extends 'layout.twig' %}

{% set colors = ['#000000', '#404040', '#a0a0a0', '#ffffff', '#a05020', '#542100', '#800000', '#ff0000', '#ff6000',
  '#ffa000', '#ffff00', '#b0ff00', '#007000', '#40c000', '#00ffa0', '#00d0ff', '#0080ff', '#0040ff', '#000040',
  '#8060ff', '#8000ff', '#ff30ff', '#ff90ff', '#ffffb0'] %}

{% block body %}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>

  {% for color in colors %}

    <button style="background-color:{{ color }};left:{{ 20 + 40 * loop.index }}px" onclick=changeColor("{{ color }}")></button>

  {% endfor %}

  <canvas id="interface" width="{{ width }}" height="{{ height }}" style="z-index: 1;"></canvas>
  <canvas id="drawing" width="{{ width }}" height="{{ height }}" style="z-index: 0;"></canvas>
  <script src="/scripts/script.js"></script>
{% endblock %}
